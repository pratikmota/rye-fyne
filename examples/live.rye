
rye .needs { fyne }

do\in fyne { 
	lab: label "Use the shell, Luke!"
	win: app .window "Live GUI"
	
	go fn { } { enter-console "Edit Fyne GUI" }
	
	with win  {
		.set-content lab ,
		.show-and-run
	}
}




































